upstream grafana {
    server {{ grafana_container["ansible_facts"]["docker_container"]["NetworkSettings"]["Networks"][grafana_network_name]["IPAddress"] }}:3000;
}

server {
        listen 80;
        server_name {{ grafana_domain_name }};
        # enforce https
        return 301 https://$server_name$request_uri;
}

server {
        listen 443 ssl;
        server_name {{ grafana_domain_name }};

        ssl_certificate {{ grafana_ssl_cert }};
        ssl_certificate_key {{ grafana_ssl_key }};

        location / {
                proxy_pass http://grafana;
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Forwarded-For $remote_addr;
                proxy_set_header X-Forwarded-Proto $scheme;
                proxy_connect_timeout 120;
                proxy_send_timeout 120;
                proxy_read_timeout 180;
        }

}
